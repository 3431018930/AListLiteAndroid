<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:visibility="visible"
            android:id="@+id/tv_alist_status"
            android:text="@string/alist_service_not_running"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <WebView
            android:id="@+id/webview_alist"
            android:layout_below="@id/tv_alist_status"
            android:background="@color/gray"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageButton
            android:id="@+id/btn_webViewGoBack"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="16dp"
            android:alpha="0.5"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:onClick="webViewGoBackOrForward"
            android:src="@drawable/go_back"
    />
    <ImageButton
            android:id="@+id/btn_webViewGoForward"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="16dp"
            android:alpha="0.5"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:onClick="webViewGoBackOrForward"
            android:src="@drawable/go_forward"
    />
</RelativeLayout>